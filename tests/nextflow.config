// Nextflow test configuration

// Default test parameters
params {
    // Test data paths
    test_data_dir = "${projectDir}/tests/data"
    sample1_counts = "${test_data_dir}/Sample1.asisi_counts.tsv"
    sample1_merged = "${test_data_dir}/Sample1.merged.bed"
    single_counts = "${test_data_dir}/SingleSample.asisi_counts.tsv"
    single_merged = "${test_data_dir}/SingleSample.merged.bed"
    
    // Override default parameters for testing
    max_memory = '2.GB'
    max_cpus = 1
    max_time = '10.m'
}

// Container settings for tests
docker {
    enabled = true
    fixOwnership = true
    runOptions = '--platform linux/amd64'
}

singularity {
    enabled = false
}

// Process configuration for tests
process {
    cpus = 1
    memory = '1.GB'
    time = '5.m'
}

// Disable timeline and reports for tests
timeline.enabled = false
trace.enabled = false
report.enabled = false
