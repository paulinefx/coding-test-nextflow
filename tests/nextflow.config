// Nextflow test configuration

// Default test parameters
params {
    // Test data paths
    test_data_base = "${projectDir}/tests/data"
    
    // Override default parameters for testing
    max_memory = '2.GB'
    max_cpus = 1
    max_time = '10.m'
}

// Container settings for tests
docker {
    enabled = true
    runOptions = '-u $(id -u):$(id -g) --platform linux/amd64'
}

singularity {
    enabled = false
}

// Process configuration for tests
process {
    cpus = 1
    memory = '1.GB'
    time = '5.m'
}

// Disable timeline and reports for tests
timeline.enabled = false
trace.enabled = false
report.enabled = false
